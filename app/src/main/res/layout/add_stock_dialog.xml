<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <EditText
        android:id="@+id/dialog_stock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:layout_marginBottom="@dimen/dialog_stock_margin_bottom"
        android:layout_marginStart="@dimen/dialog_stock_margin_left"
        android:layout_marginEnd="@dimen/dialog_stock_margin_right"
        android:layout_marginTop="@dimen/dialog_stock_margin_top"
        android:hint="@string/dialog_hint"
        android:inputType="textCapCharacters" />
</LinearLayout>
